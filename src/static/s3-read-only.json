{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Service Catalog: S3 Reference Architecture: Public read-only bucket accessible from anywhere. Consider alternate options like distributing via CloudFront OAI instead of creating a bucket using this template.(fdp-1oc5gsre6).",
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "DeletionPolicy": "Delete",
      "Properties": {
        "PublicAccessBlockConfiguration": {
          "BlockPublicAcls": "false",
          "BlockPublicPolicy": "false",
          "IgnorePublicAcls": "false",
          "RestrictPublicBuckets": "false"
        },
        "OwnershipControls": {
          "Rules": [
            {
              "ObjectOwnership": "ObjectWriter"
            }
          ]
        },
        "CorsConfiguration" : { 
          "CorsRules": [{
              "AllowedHeaders": ["*"],
              "AllowedMethods":["PUT", "POST", "DELETE", "GET"],
              "AllowedOrigins": ["*"]
          }]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "SC-S3-RA-S3-Bucket"
          }
        ]
      }
    }
  },
  "Outputs": {
    "BucketName": {
      "Value": {
        "Ref": "S3Bucket"
      },
      "Description": "Name of the Amazon S3 bucket."
    },
    "BucketARN": {
      "Value": {
        "Fn::GetAtt": ["S3Bucket", "Arn"]
      }
    }
  }
}
